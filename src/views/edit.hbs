<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-10 col-lg-10">
      <form class="items-form" action="/users/{{item._id}}/edit" method="POST">

        <div class="form-row">
          <h1>Edit Form</h1>
          {{#if error}}
          <p>{{error}}</p>
          {{/if}}
          <div class="form-group col-md-6">
            <label for="inputItem">Item Name</label>
            <input type="text" name="title" value="{{item.title}}" class="form-control" id="inputItem" />
          </div>
          <div class="form-group col-md-6">
            <label for="selectCond">Condition</label>
            <select id="selectCond" name="condition" class="form-control">
              <option selected>Choose...</option>
              <option value="high">High</option>
              <option value="middle">Middle</option>
              <option value="low">Low</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputStartAt">Starts At</label>
            <input type="date" name="startDate" value="{{item.startDate}}" class="form-control" id="inputStartAt" />
          </div>
          <div class="form-group col-md-6">
            <label for="inputEndAt">Ends At</label>
            <input type="date" name="endDate" value="{{item.endDate}}" class="form-control" id="inputEndAt" />
          </div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" value="{{item.description}}" id="description" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit Item</button>
      </form>
    </div>
  </div>
</div>
